/* pages/myaddress/myaddress.wxss */

.body{
  display:flex;
  flex-direction:column;
  justify-content: flex-start;
  align-items: center;
  padding:0 55rpx;
  background-color:#FAFAFA;
}
.title{
  margin-top:10rpx;
  height:79rpx;
  width:100%;
  font-size:55rpx;
  text-align:left;
  line-height:79rpx;
  color:#4A4E63;
}
.addressbox{
  margin-top:48rpx;
  height:256rpx;
  width:100%;
  background-color:#FFFFFF;
  border-radius:40rpx;
}
.addressnamebox{
  height:100rpx;
  width:100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: left;
}
.addressname{
  margin-top:34rpx;
  height:40rpx;
  padding-left:32rpx;
  width:100%;
  font-size:28rpx;
  color:#4A4E63;
  line-height:40rpx;
}
.greyline{
  width:558rpx;
  height:25rpx;
  margin-left:32rpx;
  border-bottom:1px solid #498FE133;
}
.addressinfobox{
  margin-top:16rpx;
  height:40rpx;
  width:100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:center;
}
.addressinfoicon{
  margin-left:32rpx;
  height:36rpx;
  width:36rpx;
  background-color:red;
}
.addressinfotext{
  margin-left:24rpx;
  height:40rpx;
  width:396rpx;
  font-size:28rpx;
  color:#4A4E63;
  text-align:left;
  line-height:40rpx;
}
.jumptobox{
  margin-top:64rpx;
  height:40rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
}
.jumptext{
  height:40rpx;
  width:168rpx;
  font-size:28rpx;
  color:#F83A51;
  line-height:40rpx;
  text-align:left;
}
.jumpicon{
  margin-left:4rpx;
  height:24rpx;
  width:24rpx;
  background-color:red;
}