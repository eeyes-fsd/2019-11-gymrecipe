/* pages/mine/mine.wxss */

.main {
  margin: 40rpx;
}

.userinfobox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 50rpx 0;
}

.head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: black;
}

.items {
  height: 150rpx;
  line-height: 150rpx;
  /* font-size: 70rpx; */
  border-bottom: 2rpx solid rgb(222, 222, 222);
}

.recommand {
  margin: 60rpx 0;
  color: rgb(248, 67, 89);
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,0.3)
}
.content-container{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 51%;
  border-radius: 35rpx;
  height: 200rpx;
  padding: 40px;
  background-color: white
}