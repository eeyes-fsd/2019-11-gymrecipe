
.container{
  display:flex;
  box-sizing: border-box;
  padding: 0 55rpx 0 55rpx;
  flex-direction:column;
  justify-content: flex-start;
  align-items: center;
  width:100%;
  background: #FAFAFA;
}
/* 图片 */
.photourl{
  height:492rpx;
  width:100%;
}
/* 标题 */
.title{
  margin-top:45rpx;
  height:60rpx;
  width:100%;
  line-height:60rpx;
  font-size:42rpx;
  color:#4A4E63;
}
.title2{
  width:100%;
  height:40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color:#4A4E63;
}
/* 跳转 */
.jumptobox{
  margin-top:58rpx;
  width:100%;
  height:40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
}
.jumpto{
  height:40rpx;
  color:#F83A51;
  font-size: 28rpx;
}
.jumptoicon{
  height:24rpx;
  width:24rpx;
}
.mealbox{
  margin-top:24rpx;
  background: #FFF;
  width:100%;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing:border-box;
  border-radius: 40rpx;
  padding:0 50rpx 0 32rpx;
}
.mealtitle{
  width:100%;
  margin-top:34rpx;
  height:40rpx;
  line-height:40rpx;
  font-size:28rpx;
  color:#484848;
}
.mealprice{
  width:100%;
  height:112rpx;
  line-height:112rpx;

}
.imagebox{
  height:212rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.imageitem{
  height:210rpx;
  width:320rpx;
  margin-right:24rpx;
  background-color:rgb(140, 238, 255);
  border: 1rpx solid #0000001A;
  border-radius: 4rpx;
}
.mealtextbox{
  margin-top:26rpx;
  height:228rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-bottom: 1px solid #0000001A;
}
.mealtext{
  height:45rpx;
  width:100%;
  font-size: 28rpx;
  color:#484848;
  line-height: 45rpx;
}
.mealprice{
  height:112rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.price{
  height:40rpx;
  line-height: 40rpx;
  color:#F83A51;
  font-size:28rpx;
}
.priceicon{
  height:30rpx;
  width:30rpx;
}

/* 新品推荐 */
.newbox{
  margin-top:48rpx;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  width:100%;
  background:#FFF;
  border-radius:40rpx;
  box-sizing: border-box;
  padding:0 50rpx 0 33rpx;
}
.newtitle{
  margin-top:34rpx;
  height:40rpx;
  color:#484848;
  font-size:28rpx;
  line-height:40rpx;
}
.newphoto{
  margin-top:26rpx;
  height:132rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.newphotoitem{
  height:130rpx;
  width:120rpx;
  margin-right: 32rpx;
  border:1px solid rgb(209, 209, 209);
  border-radius: 30rpx;
}
.gradientbox{
  margin-top:26rpx;
  box-sizing: border-box;
  padding:26rpx 0 26rpx 0;
  height:204rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-top:1px solid #0000001A;
  border-bottom:1px solid #0000001A;
}
.gradienttextbox{
  height:40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.gradienttext{
  height:40rpx;
  color:#484848;
  font-size:28rpx;
  line-height: 40rpx;
}
.gradientnum{
  height:40rpx;
  color:#484848;
  font-size:28rpx;
  line-height: 40rpx;
}
.detailbox{
  margin-bottom:200rpx;
  margin-top:48rpx;
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  width:100%;
  background:#FFF;
  border-radius:40rpx;
  box-sizing: border-box;
}
.detailtitle{
  margin-top:34rpx;
  height:40rpx;
  color:#484848;
  font-size:28rpx;
  line-height:40rpx;
  padding-left:36rpx;
}
.detailphoto{
  width:100%;
  height:688rpx;
  background: rgb(153, 206, 255);
  margin-top:36rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

/* 下单栏 */
.shopcarnum {
  position: fixed;
  bottom: 70rpx;
  left: 85rpx;
  height: 25rpx;
  background-color: red;
  line-height: 25rpx;
  text-align: center;
  font-size: 16rpx;
  color: #fff;
  border-radius: 25rpx;
}
.bottomline{
  position: fixed;
  bottom:0;
  height:120rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
  width:100%;
  background: #FFF;
  box-shadow: 0px -4px 10px #0000001A;
}
.shopcaricon{
  margin-left:55rpx;
  height:42rpx;
  width:42rpx;
}
.pricetotal{
  width:200rpx;
  height:40rpx;
  font-size:28rpx;
  color:#484848;
  line-height:40rpx;
  margin-left:44rpx;
}
.submit{
  margin-left: 170rpx;
  height:77rpx;
  width:192rpx;
  font-size: 28rpx;
  color:#FFFFFF;
  text-align: center;
  line-height: 77rpx;
  border-radius: 8rpx;
  background-color:#F83A51;
}



/* 购物浮窗 */

.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.shopwindow {
  z-index: 100;
  position: fixed;
  bottom: 120rpx;
  padding-top: 44rpx;
  height: 672rpx;
  width: 100%;
  background: #fff;
  box-shadow: 0px -4px 10px #0000001a;
  border-radius: 60rpx 60rpx 0px 0px;
}

.shop_title {
  margin: 0 55rpx;
  padding-bottom: 36rpx;
  font-size: 48rpx;
  letter-spacing: -1.86rpx;
  border-bottom: 2px solid #eaeaea;
}

.goods {
  padding: 0 59rpx;
  font-size: 28rpx;
}

.box_title {
  font-size: 32rpx;
  margin-top: 36rpx;
  height: 46rpx;
}

.box_choose {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 123rpx;
  margin-bottom: 24rpx;
  align-items: flex-end;
}

.box_decrease, .box_increase {
  height: 30rpx;
  width: 30rpx;
}

.box_box {
  height: 80rpx;
  width: 636rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.box_name>view {
  height: 40rpx;
}