.animationitem{
  position:fixed;
  height:762rpx;
  width:508rpx;
  top:98rpx;
  border-radius: 40rpx;
}

@-webkit-keyframes show {
    0%{
      width:508rpx;
      height:762rpx;
      transform: scale(1);
      opacity:1;
    }
    20%{
      top:0;
      left:0;
      width:100vw;
      height:150vw;
      opacity: 1;
      border-radius:0;
    }
    100% {
      top:0;
      left:0;
      width:100vw;
      height:150vw;
      opacity: 1;
      border-radius:0;
    }
}